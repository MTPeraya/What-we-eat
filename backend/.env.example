###############################################
# backend/.env.example
# copy this file as ".env", then fill true value before run dev
###############################################

# ===== Database =====
DATABASE_URL="postgresql://<USERNAME>:<PASSWORD>@<HOST>/<DBNAME>?sslmode=require"

# Api
JWT_SECRET="__Your_key__"
EXTERNAL_PLACES_API_KEY="__Your_key__"

# ===== CORS: Approve origin of frontend =====
FRONTEND_ORIGIN="http://localhost:5173"

# Storage (local disk)
STORAGE_PROVIDER=local
LOCAL_STORAGE_DIR=/app/storage
PUBLIC_FILES_BASE=http://localhost:4001/api/files

# ===== Optional tuning =====
# Limites review file size (byte) and number of photo in each review
RATING_PHOTO_MAX_BYTES="5000000"   # 5MB
RATING_PHOTO_MAX_COUNT="3"
