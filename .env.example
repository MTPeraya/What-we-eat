###############################################
# Copy this file to ".env" and fill in your values.
###############################################

# ===== Option 1: Local Database via Docker Compose (Recommended for Dev) =====
# Use this when running the backend inside docker-compose
# (the database service is named "db").
# DATABASE_URL="postgresql://user:password@db:5432/mydb"

# ===== Option 2: Local PostgreSQL Running on Your Machine =====
# Use this ONLY if you start PostgreSQL manually with docker run OR installed PostgreSQL locally.
# DATABASE_URL="postgresql://user:password@localhost:5432/mydb"

# ===== Option 3: Remote External Database =====
# Use this if you are connecting to a cloud or university PostgreSQL server.
# DATABASE_URL="postgresql://<USERNAME>:<PASSWORD>@<HOST>/<DBNAME>?sslmode=require"

###############################################
# Authentication & Secrets
###############################################
# Generate a long random string for signing JWT tokens:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your_generated_secret_here"

# Iron session settings for cookies
IRON_SESSION_PASSWORD="__Your_password_(32char)__"
IRON_SESSION_COOKIE_NAME="__Your_session_name__"
FRONTEND_ORIGIN="http://localhost:5173"

###############################################
# External API Keys
###############################################
# Google Maps / Places API key (https://developers.google.com/maps)
EXTERNAL_PLACES_API_KEY="your_api_key_here"

###############################################
# Storage (local disk)
###############################################
STORAGE_PROVIDER=local
LOCAL_STORAGE_DIR=/app/storage
PUBLIC_FILES_BASE=http://localhost:4001/api/files

###############################################
# Backend URLs
###############################################
VITE_BACKEND_URL=http://localhost:4001
VITE_API_URL=http://localhost:4001/api

###############################################
# Upload Limits
###############################################
RATING_PHOTO_MAX_BYTES=5000000   # 5MB
RATING_PHOTO_MAX_COUNT=3
